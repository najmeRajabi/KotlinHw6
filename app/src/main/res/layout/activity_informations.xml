<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context=".Information">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/name_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="50dp"
        android:hint="Full Name"
        android:minHeight="48dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/username_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:hint="Username"
        android:minHeight="48dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/email_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/password_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:hint="Password"
        android:inputType="numberPassword"
        android:minHeight="48dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/repeat_password_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:hint="Re-type Password"
        android:inputType="numberPassword"
        android:minHeight="48dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/gender_title_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:gravity="start"
        android:text="Gender"
        android:textColor="#222222"
        android:textSize="18dp" />

    <RadioGroup
        android:id="@+id/gender_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/female_radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:checked="true"
            android:text="Female" />


        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/male_radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:checked="false"
            android:text="Male" />
    </RadioGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        app:cornerRadius="15dp"
        android:text="Register"
        android:textAllCaps="false"
        android:backgroundTint="#E6447B"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/showInfo_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        app:cornerRadius="15dp"
        android:text="Show Info"
        android:textAllCaps="false"
        android:backgroundTint="#2465A6"/>

<!--    hide part-->

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/name_txv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        tools:text="Full Name"
        android:textColor="#e6447b"
        android:textSize="18dp"
        android:padding="10dp"
        android:backgroundTint="#4FC3F7"
        android:background="@drawable/corner"
        android:minHeight="46dp"
        android:visibility="gone"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/username_txv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        tools:text="Username"
        android:textColor="#e6447b"
        android:textSize="18dp"
        android:padding="10dp"
        android:backgroundTint="#4FC3F7"
        android:background="@drawable/corner"
        android:minHeight="46dp"
        android:visibility="gone"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/email_txv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        tools:text="Email"
        android:textColor="#e6447b"
        android:textSize="18dp"
        android:padding="10dp"
        android:backgroundTint="#4FC3F7"
        android:background="@drawable/corner"
        android:minHeight="46dp"
        android:visibility="gone"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/password_txv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        tools:text="Password"
        android:textColor="#e6447b"
        android:textSize="18dp"
        android:padding="10dp"
        android:backgroundTint="#4FC3F7"
        android:background="@drawable/corner"
        android:minHeight="46dp"
        android:visibility="gone"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/gender_txv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        tools:text="Gender"
        android:textColor="#e6447b"
        android:textSize="18dp"
        android:padding="10dp"
        android:backgroundTint="#4FC3F7"
        android:background="@drawable/corner"
        android:minHeight="46dp"
        android:visibility="gone"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        app:cornerRadius="15dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:text="Hide Info"
        android:textAllCaps="false"
        android:backgroundTint="#E831D5"
        android:visibility="gone"/>
</androidx.appcompat.widget.LinearLayoutCompat>